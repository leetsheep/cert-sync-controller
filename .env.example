# cert-sync-controller Environment Variables
# Copy this file to .env and adjust for your setup

# Required: Remote proxy IP or hostname
PROXY_IP=192.168.100.121

# Optional: Reconciliation interval in seconds (default: 30)
RECONCILE_INTERVAL=30

# Optional: Remote SSH user (default: cert-sync)
REMOTE_USER=cert-sync

# Optional: Remote certificate directory (default: /opt/traefik/certs)
REMOTE_CERT_DIR=/opt/traefik/certs

# Optional: Remote config directory (default: /etc/traefik/config)
REMOTE_CONFIG_DIR=/etc/traefik/config

# Optional: SSH key path inside container (default: /secrets/id_rsa)
SSH_KEY_PATH=/secrets/id_rsa

# Optional: SSH connection timeout in seconds (default: 5)
SSH_TIMEOUT=5

# Optional: Enable debug logging (default: false)
DEBUG=false

# Optional: Skip Traefik config generation (default: false)
# Set to true if you're using Nginx, HAProxy, or another proxy
# This will only copy certificates without generating config files
SKIP_CONFIG_GENERATION=false
